<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EtecsaActivity" >

    <LinearLayout 
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView 
            android:id="@+id/servicio"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center|left"
        	android:text="@string/servicio"	
        	
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        
        <EditText
            android:id="@+id/central"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:gravity="center"
            android:hint="@string/central"
            android:maxLength="4"
            android:inputType="textCapCharacters"
             >
            <requestFocus/>
           </EditText>

	    <EditText
	        android:id="@+id/telefono"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/telfono"
	        android:gravity="center"
	        android:inputType="phone" 
	        android:maxLength="10"/>
	</LinearLayout>

    <CheckBox
        android:id="@+id/check"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/avanzada" 
        />
	<LinearLayout 
	    android:id="@+id/avanzada1"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
	    
		<LinearLayout
		     android:id="@+id/avanzada2"
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center"
	        android:gravity="center">
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:ems="8"
			    android:text="@string/central_telf" />
           <Spinner
                android:id="@+id/central_telf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
		<LinearLayout
		    android:id="@+id/avanzada3"
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center"
	        android:gravity="center">
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:ems="8"
			    android:text="@string/cable" />
		    <Spinner
			    android:id="@+id/cable"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" 
			    android:gravity="center" 
			    />
	    </LinearLayout>
	 	<LinearLayout
		    android:id="@+id/avanzada4"
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center"
	        android:gravity="center">
			<TextView
			    android:id="@+id/parT"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/par" />
			<EditText
	            android:id="@+id/par"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:ems="5"
	            android:inputType="number" 
	            android:hint="@string/cero"
	            android:gravity="center"
	            android:maxLength="5"/>

			<TextView
			    android:id="@+id/terminalT"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/terminal" />
	 	
		    <Spinner
			    android:id="@+id/terminal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:ems="5"
			    android:gravity="center" />
		</LinearLayout>	
	    <LinearLayout 
	        android:id="@+id/avanzada5"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:ems="4"
			    android:text="@string/circ_linea" />

	        <EditText
	            android:id="@+id/ne"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="4" 
	            android:text="@string/ne"
	            android:gravity="center"
	            android:hint="@string/ne"
	            />
	        <EditText
	            android:id="@+id/cl1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="4"
	            android:inputType="number" 
	            android:hint="@string/cero"
	            android:gravity="center"
	            android:maxLength="3"/>
	
	        <EditText
	            android:id="@+id/cl2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="4"
	            android:inputType="number" 
	            android:hint="@string/cero"
	            android:gravity="center"
	            android:maxLength="3"/>
	
	        <EditText
	            android:id="@+id/cl3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="4"
	            android:inputType="number" 
	            android:hint="@string/cero"
	            android:gravity="center"
	            android:maxLength="3"/>
	        
	        </LinearLayout>
        </LinearLayout>
    <Button
        android:id="@+id/buscar"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar" />

</LinearLayout>
